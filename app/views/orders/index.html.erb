<div class="container">
  <p id="notice"><%= notice %></p>

  <h1><i class="fa fa-coffee" aria-hidden="true"></i> Orders</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Order Created At</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.name %></td>
          <td><%= order.aasm_state %></td>
          <td><%= order.created_at.strftime("%d %b. %Y %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>